<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1200.0" style="-fx-background-color: #E2EEFF;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.aplikasipenjadwalan.DashboardDosenController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="180" spacing="15" style="-fx-background-color: white;">
            <children>

                <HBox alignment="CENTER" spacing="5">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <children>
                        <Label text="ðŸ”·" />
                        <Label style="-fx-font-weight: bold; -fx-font-size: 11;" text="College Appointment" />
                    </children>
                </HBox>

                <Button prefWidth="130" style="-fx-background-color: #E0E0E0;" text="Home" onAction="#handleHome" />
                <Button prefWidth="130" style="-fx-background-color: #4C8FE2; -fx-text-fill:white;" text="Data Dosen" onAction="#handleDataDosen" />
                <Button prefWidth="130" style="-fx-background-color: #E0E0E0;" text="Data User" onAction="#handleDataUser" />

                <VBox VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>
            <children>

                <VBox prefHeight="400" prefWidth="600" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 2);">
                    <children>
                        <TableView fx:id="dosenTable" prefHeight="400" prefWidth="600">
                            <columns>
                                <TableColumn fx:id="colIdDosen" prefWidth="150" text="ID" />
                                <TableColumn fx:id="colNamaDosen" prefWidth="450" text="Nama Dosen" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 2);">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <children>
                        <HBox spacing="20" alignment="CENTER_LEFT">
                            <children>
                                <Label prefWidth="100" text="ID Dosen :" />
                                <TextField fx:id="txtIdDosen" prefWidth="200" promptText="ID Dosen" />
                            </children>
                        </HBox>
                        <HBox spacing="20" alignment="CENTER_LEFT">
                            <children>
                                <Label prefWidth="100" text="Nama Dosen :" />
                                <TextField fx:id="txtNamaDosen" prefWidth="200" promptText="Nama Dosen" />
                            </children>
                        </HBox>
                        <HBox spacing="10">
                            <children>
                                <Button prefWidth="80" style="-fx-background-color:#007BFF; -fx-text-fill:white;" text="New" onAction="#handleTambahDosen" />
                                <Button prefWidth="80" style="-fx-background-color:#28A745; -fx-text-fill:white;" text="Update" onAction="#handleUpdateDosen" />
                                <Button prefWidth="80" style="-fx-background-color:#DC3545; -fx-text-fill:white;" text="Delete" onAction="#handleDeleteDosen" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <Button style="-fx-background-color: red; -fx-text-fill: white;" text="Log Out" onAction="#handleLogout"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
